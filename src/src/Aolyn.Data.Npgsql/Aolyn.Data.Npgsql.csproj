<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <VersionPrefix>1.0.0.22</VersionPrefix>
        <TargetFrameworks>netstandard1.3;net451</TargetFrameworks>
        <AssemblyName>Aolyn.Data.Npgsql</AssemblyName>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Aolyn.Config\Aolyn.Config.csproj" />
        <ProjectReference Include="..\Aolyn.Utility\Aolyn.Utility.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL">
            <Version>1.0.2</Version>
        </PackageReference>
    </ItemGroup>
    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
    </ItemGroup>
    <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    </ItemGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
        <DefineConstants>$(DefineConstants);NETCORE</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'net451' ">
        <DefineConstants>$(DefineConstants);NETFX;NET40</DefineConstants>
    </PropertyGroup>
</Project>